.nav {
  display: flex;
  flex-direction: row;
  background-color: #222;
}

.select {
  width: 32%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: #fff;
  font-size: 13px;
  border-bottom: 8px solid #777;
}

.normal {
  width: 32%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: #fff;
  font-size: 13px;
}

.line {
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  color: #666;
}

.movieInfo {
  display: flex;
  flex-direction: row;
  margin: 15px;
}

.detail {
  margin-left: 15px;
  font-size: 13px;
}

.detail view {
  margin-bottom: 7px;
}

.sore {
  color: #fc7f60;
}

.desc {
  font-weight: bold;
}

.buy {
  width: 155px;
  height: 40px;
  line-height: 40px;
  background-color: #2daddc;
  text-align: center;
  color: #fff;
}

.opr {
  display: flex;
  flex-direction: row;
}

.opr view {
  width: 45%;
  height: 44px;
  line-height: 44px;
  margin: 0 auto;
  background-color: #eee;
  font-size: 13px;
  text-align: center;
  border-radius: 3px;
}
.intro{
  background-color: #f1f1f1;
  margin: 10px;
  padding: 10px;
  font-size: 13px;
  line-height: 15px;
}
.personInfo{
  display: flex;
  flex-direction: row;
  margin: 15px;
  background-color: #f1f1f1;
}
.name{
  font-size: 14px;
  font-weight: bold;
  line-height: 100px;
  margin-left: 10px;
}
.photo{
  width: 33%;
}
.bottomNav{
  display: flex;
  flex-direction: row;
  background-color: #505963;
  height: 45px;
  line-height: 45px;
  position: absolute;
  bottom: 0px;
  width: 100%;
}
.bottomNav view{
  margin: 0 auto;
}
.common{
  font-size: 13px;
  color: #ffffff;
}